            <button class="btn btn-outline-success my-2 my-sm-0" @onclick="OnShowModalClick">Inicia sesión</button>
        </div>
    </div>
</nav>

<Modal @ref="loginModal" Title="Inicia sesión">
    <BodyTemplate>
        <form @onsubmit="Login">
            <div class="form-group">
                <label for="userEmail">Correo electrónico</label>
                <input type="email" class="form-control" id="userEmail" @bind-value="credentials[0]" aria-describedby="emailHelp" placeholder="ejemplo@gmail.com">               
            </div>
            <br/>
            <div class="form-group">
                <label for="userPassword">Contraseña</label>
                <input type="password" class="form-control" id="userPassword" @bind-value="credentials[1]" placeholder="Contraseña">
            </div>
            <br/>
            <button type="submit" style="margin-bottom: 5px; margin-right:15px" class="btn btn-primary">Inicia sesión</button>
            <a href="register" class="text-right" @onclick="loginModal.HideAsync" style="color:grey; font-size:12px">¿No tienes una cuenta? Regístrate</a>
            <p class="text-left" style="color: red">@warningText</p>
        </form>
    </BodyTemplate>
</Modal>

                   